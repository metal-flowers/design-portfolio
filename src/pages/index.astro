---
const title = "Home";
const description =
  "Annie Szafranski is a California based graphic designer and typographer designing editorial experiences across the web and in print.";

import "../styles/global.css";
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout {title} {description}>
  <section class="about">
    <h1>
      Annie Szafranski is a California-based designer, typographer, and aspiring
      type designer creating editorial experiences across the web and in print.
      She is wrapping up her year as type design student in the <a
        href="https://letterformarchive.org/type-west-online/"
        target="_blank">Type West Online</a
      > program.
    </h1>
  </section>

  <section class="project-grid">

    <!---------- PROJECT 1 ------------>

    <div class="project">
      <a href="/projects/primitiv-text">
      <img
          src="https://res.cloudinary.com/dzv7ytxjh/image/upload/c_fill,w_872,f_auto,q_60/v1738917707/Primitiv-Text_thumb_gc4qrs.jpg"
          alt="low res dark textured background from an old CRT TV with white type embedded into texture showing: Primitiv Text at an angle"/></a>
      <h2 class="project-title">
        <a href="projects/primitiv-text">Primitiv Text</a>
      </h2>
      <p class="project-type">Type Design</p>
    </div>

    <!---------- PROJECT 2 ------------>

    <div class="project">
      <a href="/projects/beatrice-no-30-type-revival"
        ><img
          src="https://res.cloudinary.com/dzv7ytxjh/image/upload/c_fill,w_872,f_auto,q_60/v1738893268/beatrice-no-30_1_s1aaoh.webp"
          alt="snippet of an illustration by Gustave Dore from Dante's Divine Comedy featuring Beatrice, with an olive green overlay and Beatrice No. 30 written in a white serif font in the center."
        /></a>
      <h2 class="project-title">
        <a href="projects/beatrice-no-30-type-revival">Beatrice No. 30</a>
      </h2>
      <p class="project-type">Type Design</p>
    </div>

    <!---------- PROJECT 3 ------------>

    <div class="project">
      <a href="/projects/marlborough-titling">
        <img
          src="https://res.cloudinary.com/dzv7ytxjh/image/upload/c_fill,w_872,f_auto,q_60/v1738916359/marlborought-titling-thumb__jowip0.jpg"
          alt="A plain bright vermillion color background with creme text on top in sans serif type stating: Introducing Marlborough Titling (centered)."/></a>
      <h2 class="project-title">
        <a href="projects/marlborough-titling">Marlborough Titling</a>
      </h2>
      <p class="project-type">Type Design</p>
    </div>

  </section>
</BaseLayout>