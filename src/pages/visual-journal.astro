 <BaseLayout {title} {description}>
	<div class="post-index">
	  <ul>
		{formattedPosts.map((post: any) => (
		  <li>
			<a href={post.url} class="block p-2 hover:text-blue-500">{post.frontmatter.title}</a>
			<img src={post.frontmatter.image.url} alt={post.frontmatter.image.alt} />
		  </li>
		))}
	  </ul>
	</div>
