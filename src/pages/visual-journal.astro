---

import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';

//Utils Imports
import { formatBlogPosts } from "../scripts/utils";

const title = "Visual Journal";
const allPosts = await Astro.glob('../pages/visual-journal/*.md');
const formattedPosts = formatBlogPosts(allPosts);


---

<BaseLayout {title}>
	<div class="post-index">
	<ul>
		{formattedPosts.map((post: any) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
	</ul>
	</div>
</BaseLayout>